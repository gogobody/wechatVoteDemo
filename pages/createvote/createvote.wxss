/* pages/createvote/createvote.wxss */

.section {
  background-color: white;
  padding: 10px;
  margin-top: 20px;
  color: #333;
  text-align: left;
  font-size: large;
}

.timebody {
  background-color: white;
  padding: 10px;
  margin-top: 10px;
}

picker {
  display: inline-block;
}

.picker {
  padding: 0 20px;
}

.options {
  font-size: 18px;
  margin: 30px 0;
  background-color: white;
  word-break: break-all;
  padding: 5px 10px;
}

.deloption {
  color: red;
  display: inline-block;
  position: relative;
  text-align: center;
  width: 20%;
  /*vertical-align: middle*/
}

.option {
  padding: 5px;
  border-bottom: 1px solid gray;
}

.index {
  width: 80%;
  display: inline-block;
}

#addoptioninput {
  color: gray;
  padding: 5px;
  line-height: 10px;
  margin-top: 30px;
  margin-bottom: 10px;
  border: 1px solid red;
  border-color: #58acfa;
  box-shadow: 0 0 3px #58acfa;
}
