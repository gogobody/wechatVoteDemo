/**index.wxss**/
page{
  margin-bottom: 46px;
}
.container{
  display: block;
  margin: 10px 20px ;
  
}

.votePane {
  width: 100%;
  margin-top: 1em;
  display: inline-block;
  background-color: white;
}

.voteBar {
  
  text-align: left;
  padding: 10px 10px 5px 10px;
  font-size: 20px;
  font-weight:0;
  font-family: "微软雅黑","黑体",serif;
  border-bottom: 1px solid #ccc;
}

.voteBox {
  background-color: white;
  position: relative;
  text-align: left;
  padding: 10px 10px 10px 15px;
}

.status {
  font-size: 14px;
}

.deadline {
  font-size: 14px;
  margin-top: 5px;
}

.share {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 5px;
  background-color: mediumseagreen;
  color: white;
}

.moreBtn {
  display: inline-block;
  color: darkgrey;
  width: 100%;
  height: 1em;
  line-height: 1em;
  font-size: 18px;
  margin-top: 1em;
  text-align: center;
}
